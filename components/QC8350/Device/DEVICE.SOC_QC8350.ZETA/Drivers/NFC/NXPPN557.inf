; ==================== Class section =========================

[Version]
Signature   = "$Windows NT$"
Class       = Proximity
ClassGuid   = {5630831C-06C9-4856-B327-F5D32586E060}
Provider    = %NXP%
DriverVer   = 03/18/2021,1.0.0.0
CatalogFile = NXPPN557.cat
PnpLockdown = 1

[SourceDisksNames]
1 = %MediaDescription%

[SourceDisksFiles]
MSNfcI2C557.arm.rs2.dll = 1
MSNfcI2C557.1803.dll = 1
MSNfcI2C557.1809.dll = 1
MSNfcI2C557.1903.dll = 1
;NXPPN557FW.dat  = 1

[DestinationDirs]
UMDriverCopy1803 = 13 ; copy to drivers\umdf
UMDriverCopy1809 = 13 ; copy to drivers\umdf
UMDriverCopy1903 = 13 ; copy to drivers\umdf
NxpCopyFileList  = 13

; ================= Device section =====================

[Manufacturer]
%NXP% = NXP, NTarm64, NTarm64.10.0...17135, NTarm64.10.0...18886

[NXP.NTarm64]
%NXPPN557_HWID.DeviceDesc% = NXPPN557_HWID_1803, ACPI\PN557

[NXP.NTarm64.10.0...17135]
%NXPPN557_HWID.DeviceDesc% = NXPPN557_HWID_1809, ACPI\PN557

[NXP.NTarm64.10.0...18886]
%NXPPN557_HWID.DeviceDesc% = NXPPN557_HWID_1903, ACPI\PN557

[NXPPN557_HWID_1803.NT]
CopyFiles = UMDriverCopy1803,NxpCopyFileList

[NXPPN557_HWID_1809.NT]
CopyFiles = UMDriverCopy1809,NxpCopyFileList

[NXPPN557_HWID_1903.NT]
CopyFiles = UMDriverCopy1903,NxpCopyFileList

; ================= Services section ======================

[NXPPN557_HWID_1803.NT.Services]
AddService = WUDFRd,0x000001fa,WUDFRD_ServiceInstall

[NXPPN557_HWID_1809.NT.Services]
AddService = WUDFRd,0x000001fa,WUDFRD_ServiceInstall

[NXPPN557_HWID_1903.NT.Services]
AddService = WUDFRd,0x000001fa,WUDFRD_ServiceInstall

[WUDFRD_ServiceInstall]
DisplayName   = %WudfRdDisplayName%
ServiceType   = 1
StartType     = 3
ErrorControl  = 1
ServiceBinary = %12%\WUDFRd.sys

; ================= WDF entries ===========================

[NXPPN557_HWID_1803.NT.Wdf]
UmdfService              = "MSNfcI2C557", msnfci2c557_1803_Install
UmdfServiceOrder         = MSNfcI2C557
UmdfDirectHardwareAccess = AllowDirectHardwareAccess
UmdfFileObjectPolicy     = AllowNullAndUnknownFileObjects
UmdfImpersonationLevel   = Impersonation

[NXPPN557_HWID_1809.NT.Wdf]
UmdfService              = "MSNfcI2C557", msnfci2c557_1809_Install
UmdfServiceOrder         = MSNfcI2C557
UmdfDirectHardwareAccess = AllowDirectHardwareAccess
UmdfFileObjectPolicy     = AllowNullAndUnknownFileObjects
UmdfImpersonationLevel   = Impersonation

[NXPPN557_HWID_1903.NT.Wdf]
UmdfService              = "MSNfcI2C557", msnfci2c557_1903_Install
UmdfServiceOrder         = MSNfcI2C557
UmdfDirectHardwareAccess = AllowDirectHardwareAccess
UmdfFileObjectPolicy     = AllowNullAndUnknownFileObjects
UmdfImpersonationLevel   = Impersonation

[msnfci2c557_1803_Install]
UmdfLibraryVersion = 2.15.0
ServiceBinary      = %13%\MSNfcI2C557.1803.dll
UmdfExtensions     = NfcCx0102

[msnfci2c557_1809_Install]
UmdfLibraryVersion = 2.15.0
ServiceBinary      = %13%\MSNfcI2C557.1809.dll
UmdfExtensions     = NfcCx0102

[msnfci2c557_1903_Install]
UmdfLibraryVersion = 2.15.0
ServiceBinary      = %13%\MSNfcI2C557.1903.dll
UmdfExtensions     = NfcCx0102

[NXPPN557_HWID_1803.NT.HW]
AddReg = NXPPN557_Config_AddReg

[NXPPN557_HWID_1809.NT.HW]
AddReg = NXPPN557_Config_AddReg

[NXPPN557_HWID_1903.NT.HW]
AddReg = NXPPN557_Config_AddReg

[NXPPN557_Config_AddReg]
HKR,              , "NfcIP_Tgt_Mode" , 0x00010001, 0x0F
HKR,              , "NfcCE_Mode"     , 0x00010001, 0x0F
HKR,              , "PollDevInfo"    , 0x00010001, 0x3F
HKR,              , "NfcIP_Mode"     , 0x00010001, 0x0F
HKR,              , "Duration"       , 0x00010001, 0x30D40
HKR,              , "IdleTimeout"    , 0x00010001, 0x2710
HKR,              , "IdleTimeoutType", 0x00010001, 2
HKR, "FirmwareMap", "8"              , 0x00020000, "%13%\nxppn557fw.dat"
HKR, "FirmwareMap", "5"              , 0x00020000, "%13%\nxppn557fw.dat"

; ================= Co-installer section ==================

[NXPPN557_HWID_1803.NT.CoInstallers]
AddReg = CoInstallers_AddReg

[NXPPN557_HWID_1809.NT.CoInstallers]
AddReg = CoInstallers_AddReg

[NXPPN557_HWID_1903.NT.CoInstallers]
AddReg = CoInstallers_AddReg

[CoInstallers_AddReg]
HKR,, CoInstallers32, 0x00010000, "WUDFCoinstaller.dll"

; ================= Copy files ============================

[NxpCopyFileList]
;NXPPN557FW.dat

[UMDriverCopy1803]
MSNfcI2C557.1803.dll

[UMDriverCopy1809]
MSNfcI2C557.1809.dll

[UMDriverCopy1903]
MSNfcI2C557.1903.dll

;================= Strings section =====================

[Strings]
;
; Localizable
;
NXP                      = "NXP Semiconductors"
NXPPN557_HWID.DeviceDesc = "NXP Near Field Communication (NFC) Controller (PN557)"
MediaDescription         = "NXP Near Field Communication (NFC) Controller (PN557) Installation Media"
WudfRdDisplayName        = "Windows Driver Foundation - User-mode Driver Framework Reflector"